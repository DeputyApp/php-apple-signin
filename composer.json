{
    "name": "griffinledingham/php-apple-signin",
    "type": "library",
    "description": "A simple library to decode and parse Apple Sign In client tokens.",
    "keywords": [
        "apple",
        "sign",
        "in",
        "ios",
        "php",
        "jwt",
        "jwk"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Griffin Ledingham",
            "email": "gcledingham@gmail.com",
            "role": "Developer"
        }
    ],
    "scripts": {
        "test:all": ["@test:integration"],
        "test:integration": "phpunit --colors=always --bootstrap ./tests/integration/bootstrap.php --testsuite=integration",
        "lint": "git diff --diff-filter=ACMR --name-only origin/master..HEAD | grep '\\.php' | xargs vendor/bin/phpcs --standard=phpcs.xml --warning-severity=0 --extensions=php",
        "lintall": "vendor/bin/phpcs --standard=phpcs.xml --warning-severity=0 --extensions=php"
    },
    "autoload": {
        "psr-4": {
            "AppleSignIn\\": "src/",
            "AppleSignInTest\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-openssl": "*",
        "firebase/php-jwt": "^5.2.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "3.*"
    }
}
